    "version": "0.2.0",
    "configurations": [
        {
            "name": "graphql-baseline",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/server/index.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "babel-register"
            ],
            "env": {
                "NODE_ENV": "development",
                "RECREATE_SCHEMA": "true",
                "API_SECRET": "shhh_its_a_secret",
                "DATABASE_URL": "postgres://postgres@127.0.0.1:61001/graphql_baseline",
                "REDIS_URL": "redis://127.0.0.1:61000",
                "REDIS_USER_SESSIONS_DB": "1"
            },
            "console": "internalConsole"
        },
        {
            "name": "Attach to Nodemon",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": true
        }
    ]
}